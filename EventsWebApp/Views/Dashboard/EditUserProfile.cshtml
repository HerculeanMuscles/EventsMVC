<form asp-action="EditUserProfile" method="post" enctype="multipart/form-data" class="row">
    <input type="hidden" id="Id" name="Id" asp-for="Id" />
    <div class="col-6">
        <div class="form-group">
            <label asp-for="City">City:</label>
            <input asp-for="City" type="text" class="form-control form-control-lg" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="col-6">
        <div class="form-group">
            <label asp-for="State">State:</label>
            <input asp-for="State" type="text" class="form-control form-control-lg" />
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
    </div>
    <div class="col-6">
        <div class="form-group">
            <label asp-for="Street">Street:</label>
            <input asp-for="Street" type="text" class="form-control form-control-lg" />
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>
    </div>

    <div class="col-6">
        <div class="form-group">
            <label asp-for="Description">Description:</label>
            <input asp-for="Description" type="text" class="form-control form-control-lg" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Image" class="form-label">Profile Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
